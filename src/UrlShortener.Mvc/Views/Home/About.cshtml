@{
}
@{
    ViewData["Title"] = "About";
}

<div class="text-center">
    <div class="row">
        @if(Model.IsAdmin) {
            <div class="col w-50">
                <form asp-action="AboutPost" asp-controller="Home">
                    <div class="mb-3">
                        <h2>Edit about section</h2>
                    </div>
                    <div class="mb-3">
                        <label for="text-input-about" class="form-label">Text</label>
                        <textarea class="form-control" id="text-input-about" name="newText"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Set</button>
                    <div class="mt-3">
                        <h5 class="text-danger">@ViewBag.LoginError</h5>
                    </div>
                </form>
            </div>
            <div class="col w-50"></div>
        }
    </div>
    <div class="row">
        <p class="">@Model.AboutInfo.Text</p>
        @if (Model.IsAdmin) {
            <p>Last update: @Model.AboutInfo.EditedAt</p>
            <p>Updated by: @Model.AboutInfo.Editor.UserName</p>
        }
    </div>
</div>

